%script{src: "//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
:javascript
  function fixurl () {
  for (var i=0; i<window.location.pathname.split(/\//g).length-2; i++)
    $(this).attr("href", "../" + $(this).attr("href"))
    $(this).attr("src", "../" + $(this).attr("src"))
  }
  
  $(document).ready(function() {
    $("head link").each( fixurl );
    $("body a").each( fixurl );
    $("body img").each( fixurl );
    $("#url").text(window.location.pathname);
  })
%h1
  Sorry, the page
  %span#url
  could not be found.
%h2
  Perhaps try
  %a{href: "/"} home
  instead?
